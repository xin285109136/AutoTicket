# Amadeus API (Flight Search)
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_HOSTNAME=test

# SerpApi (Google Flights Backup)
SERPAPI_KEY=your_serpapi_key

# Google Gemini (AI Explanation)
GOOGLE_API_KEY=your_google_ai_key

# OpenAI
OPENAI_API_KEY=your_openai_key

# AI Provider Select: "gemini" or "openai"
AI_PROVIDER=gemini

# Exchange Rates (Fallback if API fails)
EXCHANGE_RATE_EUR_JPY=162
EXCHANGE_RATE_USD_JPY=150

# Web Scraper Settings
# SCRAPER_HEADLESS: true = ブラウザを非表示で実行, false = ブラウザを表示
SCRAPER_HEADLESS=false
# SCRAPER_AUTO_CLOSE: true = 自動的にブラウザを閉じる, false = ブラウザを開いたまま（デバッグ用）
SCRAPER_AUTO_CLOSE=tre

# App Settings
ENV=development
DEBUG=True
